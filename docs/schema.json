{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "figmaid",
  "properties": {
    "directories": {
      "description": "Directories to load font files from.",
      "default": [
        "/usr/local/share/fonts",
        "/usr/share/fonts",
        "~/.local/share/fonts"
      ],
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "port": {
      "description": "Port to bind the server to. Provided if you need to use a reverse proxy.",
      "default": 18412,
      "type": "number"
    }
  }
}
